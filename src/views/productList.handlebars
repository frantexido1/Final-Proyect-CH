<style>
  body { font-family: Arial, sans-serif; background-color: #f4f4f4; margin: 0;
  padding: 0; display: flex; justify-content: center; align-items: center;
  min-height: 100vh; } .container { background-color: #fff; padding: 20px;
  border-radius: 5px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); width: 80%;
  max-width: 1000px; overflow: auto; } table { width: 100%; border-collapse:
  collapse; } th, td { padding: 10px; text-align: left; border-bottom: 1px solid
  #ddd; } th { background-color: #f2f2f2; } tr:hover { background-color:
  #f5f5f5; }
</style>

<div class="container">
  <h1>Lista de productos</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Descripción</th>
        <th>Código</th>
        <th>Precio</th>
        <th>Estado</th>
        <th>Stock</th>
        <th>Categoría</th>
        <th>Miniaturas</th>
        <th>Eliminar</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.code}}</td>
          <td>{{this.price}}</td>
          <td>{{this.status}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.category}}</td>
          <td>{{this.thumbnail}}</td>
          <td><button
              onclick="deleteProduct('{{this._id}}')"
            >Eliminar</button></td>
      {{/each}}
    </tbody>
  </table>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/product.js"></script>